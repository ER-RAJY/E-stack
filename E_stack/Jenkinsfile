pipeline {
    agent any

    tools {
        // Ensure the JDK name matches the defined JDK in Jenkins
        jdk 'jdk-21'
        // Ensure the Maven name matches the defined Maven in Jenkins
        maven 'mvn'
    }

    environment {
        // Using Jenkins credentials
        SONAR_CREDS = credentials('E-stack') // Ensure this ID matches your Jenkins credentials
    }

    stages {
        stage('Checkout') {
            steps {
                // Check out the main branch from the specified Git repository
                git branch: 'main', url: 'https://github.com/ER-RAJY/E-stack.git'
            }
        }

        stage('Build & Test') {
            steps {
                dir('E_stack') {
                    // Build the project using Maven
                    bat 'mvn clean install'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') { // Ensure this matches your SonarQube installation name
                    dir('E_stack') {
                        // Run SonarQube analysis
                        bat """
                            mvn sonar:sonar \
                            -Dsonar.projectKey=E_stack \
                            -Dsonar.host.url=http://localhost:9000 \
                            -Dsonar.token=%SONAR_CREDS_PSW%
                        """
                    }
                }
            }
        }
    }
}
